<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProject">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="My Project"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:background="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Name"
            android:textColor="@color/purple_200"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/TV_ProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="22sp" android:paddingVertical="5dp"
            android:paddingStart="8dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/outline_textview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Date"
            android:textColor="@color/purple_200"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/TV_ProjectDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="22sp"
            android:paddingVertical="5dp"
            android:paddingStart="8dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/outline_textview"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Details"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:textColor="@color/purple_500"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:textColor="@color/purple_200"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/TV_CName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:paddingVertical="5dp"
                android:paddingStart="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/outline_textview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CatchPhrase"
                android:textColor="@color/purple_200"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/TV_CarchPhrase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:paddingVertical="5dp"
                android:paddingStart="8dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/outline_textview"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Website"
            android:textColor="@color/purple_200"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/TV_Website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:paddingVertical="5dp"
            android:paddingStart="8dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/outline_textview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="@color/purple_200"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/TV_Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="22sp"
            android:paddingVertical="5dp"
            android:paddingStart="8dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/outline_textview"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
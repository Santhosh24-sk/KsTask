<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateProject">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Create Project"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:background="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:endIconMode="clear_text"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Project Name"
                android:id="@+id/ET_ProjectName"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--
        <EditText
            android:id="@+id/ET_ProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Project Name"
            android:inputType="textPersonName" />-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Project Date"
                android:inputType="date"
                android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
                android:id="@+id/ET_ProjectDate"/>
        </com.google.android.material.textfield.TextInputLayout>

      <!--  <EditText
            android:id="@+id/ET_ProjectDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
            android:ems="10"
            android:hint="Project Date"
            android:inputType="textPersonName" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Company Details"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/purple_500"/>

            <TextView
                android:id="@+id/TV_CName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C Name"
                android:textSize="22sp"
                android:paddingVertical="5dp"
                android:paddingStart="8dp"
                android:background="@drawable/outline_textview"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/TV_CarchPhrase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CarchPhrase"
                android:textSize="22sp"
                android:paddingVertical="5dp"
                android:paddingStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/outline_textview"/>

        </LinearLayout>

        <TextView
            android:id="@+id/TV_Website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Website"
            android:textSize="22sp"
            android:paddingVertical="5dp"
            android:paddingStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/outline_textview"/>

        <TextView
            android:id="@+id/TV_Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="22sp"
            android:paddingVertical="5dp"
            android:paddingStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/outline_textview"
            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="8dp"
            android:layout_marginVertical="8dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_project_btn"
            android:text="Create"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>